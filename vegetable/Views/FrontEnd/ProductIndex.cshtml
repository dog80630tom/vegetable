        function QuickView(e) {
            var id = $(e).parents("figure").attr("id");
            $.ajax({
                type: "GET",
                url: "/FrontEnd/ProductQuickView",
                data: {
                    id: id
                },
                dataType: "text",
                success: function (response) {
                    var currentproduct = JSON.parse(response);
                    currentproduct.Url = JSON.parse(currentproduct.Url);
                    $('.modal #LargePic').attr('src', currentproduct.Url.Url1);
                    $('.modal #ProductName').text(currentproduct.ProductName);
                    $('.modal #ProductPrice').text('$' + currentproduct.ProductPrice + '.00');
                    $('.modal figure').attr('id', currentproduct.ProductID);
                    $('.modal #ProductID').attr('value', currentproduct.ProductID);
