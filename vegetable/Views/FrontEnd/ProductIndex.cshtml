
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml";
}
<style>
    * {
        font-family: "Open Sans",Arial,Helvetica,sans-serif;
    }

    .ProductLargeImg {
        width: 350px;
    }

    .fa-star {
        color: rgb(255, 210, 0);
    }

    .Product-info {
        box-sizing: border-box;
        width: 120px;
    }

    .btn-size {
        border: 1px solid #dedede;
    }

    .add-to-cart {
        border: 2px solid #000;
    }

    .productView-title {
        font-size: 20px;
        font-weight: 400;
        margin: 0 10px 10px 0;
        letter-spacing: .02em;
        line-height: 32px;
    }

    .productView-rating {
        padding-top: 8px;
        padding-bottom: 27px;
    }

    .productView-price {
        font-family: Poppins,Arial,Helvetica,sans-serif;
        font-size: 20px;
        font-weight: 400;
        color: #000;
        letter-spacing: .02em;
    }

    #button#form-action-addToCart {
        font-size: 90px;
        min-width: 270px;
        max-width: 280px;
        display: -ms-inline-flexbox;
        display: inline-flex;
        -ms-flex-pack: center;
        justify-content: center;
        color: #000;
        background-color: #fff;
        border-color: #000;
    }

    /*產品小圖和社群列*/
    .productView-thumbnail {
        display: flex;
        justify-content: center;
    }

    /*產品小圖*/
    .viewPic {
        width: 64px;
        height: 97px;
    }

    .btn, .RAndQ {
        border: 1px solid #e5e5e5;
    }

    #questionCount, #reviewCount {
        background: #eee;
        padding: 2px 5px;
        margin-left: 10px;
    }
</style>

