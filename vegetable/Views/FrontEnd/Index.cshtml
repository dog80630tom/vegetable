
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml";
}
    <style>
        .jumbColor {
            background: #fff8ee;
        }
        .font {
            font-weight:900;
        }
        .btn-outline-dark {
         color: #343a40;
         border-color: #343a40;
         border: 3px solid;
         background:white;
        }
        .img-row{
            padding:0 15%;
        }
        figure{
            max-height:100%;
            overflow:hidden;
        }
        .currentImg:hover{
            opacity: .4;
        }
        .maskImg:hover{
            opacity: .4;         
        }
        .zoomin{
            margin-bottom:0;
        }
        .zoomin:hover{
            transform: scale(1.1);
            transition: all 0.5s linear;
        }
        #carouselExampleControls .arrow-right-top,
        #carouselExampleControls .arrow-left-top {
              width:1%;
           font-size:36px;
           opacity:0;
           color:black;
        }
         #carouselExampleInterval .arrow-right,
         #carouselExampleInterval .arrow-left {
           width:1%;
           font-size:36px;
           opacity:0;
           color:black;
        }
          .arrow-right-top {
            margin-right:8%;
        }
         .arrow-left-top {
            margin-left:8%;
        }

        .arrow-right {
            margin-right:-5%;
        }
         .arrow-left {
            margin-left:-5%;
        }
        #carouselExampleControls:hover .arrow-right-top,
        #carouselExampleControls:hover .arrow-left-top {
              transition:2s;
                 opacity:1;
        }
         #carouselExampleInterval:hover .arrow-right,
         #carouselExampleInterval:hover .arrow-left {   
                 transition:2s;
                 opacity:1;
            }

    </style>
