            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "FrontEnd")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/Order">Member</a>
            </li>
            <li class="breadcrumb-item current">
                <a href="/Member">Setting</a>
            </li>

        </ul>
        <!-- 要塞目錄資料及連結資料   結尾-->
    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="page-heading" style="font-weight:600;">Account Settings</h1>

            <nav class="navBar navBar--sub navBar--account">
                <ul class="navBar-section">
                    <li class="navBar-item is-active">
                        <a class="navBar-action" href="/Order">Orders</a>
                    </li>
                    <li class="navBar-item is-active">
                        <a class="navBar-action" href="/Cart">Cart</a>
                    </li>
                    <li class="navBar-item is-active">
                        <a class="navBar-action" href="/WishList">Wish List </a>
                    </li>
                    <li class="navBar-item is-active">
                        <a class="navBar-action" href="/Member">Account Settings</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    @using (Html.BeginForm("MemberPageSetting", "FrontEnd", "Post"))
    {
        <div class="container">
            <div class="row">
                <div class="col-6" style="margin-top:25px;">
                    <label>Last Name</label>
                    @Html.TextBox("MemberName", Model.MemberName, new { @class = "form-input" })
                </div>
                <div class="col-6" style="margin-top:25px;">
                    <label>Email Address</label>
                    @Html.TextBox("MemberEmail", Model.MemberEmail, new { @class = "form-input", id = "userEmail",  @readonly= "true"})
                </div>
            </div>

            <div class="row">

                <div class="col-6" style="margin-top:25px;">
                    <label>Password</label>
                    @Html.TextBox("MemberPassword", "", new { @class = "form-input", id = "newpw", onchange = "checkpsw()",type="password" })
                </div>
                <div class="col-6" style="margin-top:25px;">
                    <label>Confirm Password</label>
                    @Html.TextBox("MemberPassword", "", new { @class = "form-input", id = "confirmnewPw", onchange = "checkpsw()" ,type="password"})
                </div>
            </div>
            <div class="row">
                <div class="col-6" style="margin-top:25px;">
                    <label>Current Password</label>
                    <input class="form-input" id="psw" onchange="checkCurrentPsw()" type="password">
                </div>
                <div class="col-6" style="margin-top:25px;">
                    <label>Phone Number</label>
                    @Html.TextBox("MemberPhone", Model.MemberPhone, new { @class = "form-input" })
                </div>
            </div>
            <div class="row" style="padding:15px">
                <label class="mt-1 my-auto" id="pwStat" style="color:red">123</label>
                <input type="submit" class="btn btn-outline-dark rounded-0 ml-auto disable" style="margin-top:25px;" value="Update Details" id="submitInfor">
            </div>
        </div>
    }

</div>


@section Endscripts
    {
    <script>
        var canSubmit = false;
        var confirmPsw = false;
        $(function () {

            
            checkpsw();

        });
         function checkpsw() {
                console.log("檢查");
             if ($("#newpw").val() != $("#confirmnewPw").val()) {
                 $("#pwStat").html("the new password you set is incorrect");
                 confirmPsw = false;
             }
             else
             {
                 $("#pwStat").html("");
                 confirmPsw = true;
             }

        }

        function checkCurrentPsw()
        {
            if (confirmPsw) {
                  var uname = $("#userEmail").val();
                var psw = $("#psw").val();
                callAjax(uname, psw);
         

            //canSubmit();

            }
            else {
                 $("#pwStat").html("You have not set your new passsword yet");
            }
           
        }

        function IfCanSubmit() {
            if (canSubmit) {
                $('#submitInfor').removeClass("disable");
            }
        }

        function callAjax(uname, psw)
        {
            console.log(uname + psw);
             $.ajax({
                type: "POST",
                url: "FrontEnd/Login",
                data: { uname, psw },
                success: function (data) {
                    console.log('back', data);
                    if (data == "1") {
                        $("#pwStat").html("Password correct");
                        canSubmit = true;
                                    IfCanSubmit();
                    }
                    else if (data == "3") {
                        $("#pwStat").html("Password incorrect");
                        canSubmit = false;
                    }
                        else if (data == "2") {
                        $("#pwStat").html("2");
                        canSubmit = false;
                    }

                }   
             })
            IfCanSubmit();
        }


    </script>
}

