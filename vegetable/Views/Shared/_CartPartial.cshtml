@model  vegetable.Models.ViewModels.OrderDetailViewModel
@{
    var total = (Model.Quantity) * (Model.ProductPrice);
    var quantityAdd = "quantityAdd" + Model.OrderID;
    var quantityReduce = "quantityReduce" + Model.OrderID;
    var quantity = "quantity" + Model.OrderID;
}

@* 購物車內容 *@
<div class="row my-5">
    <div class="col-5 p-0">
        <div class="row">
            @* 圖片 *@
            <div class="col-5">
                <img id="productImg" src="~/Assets/ProductPics/@Model.CategoryName/@Model.ProductName/1.jpg" alt="@Model.ProductName" />
            </div>
            @* 名稱 大小 *@
            <div class="col-7">
                <div>@Model.ProductName</div>
                @*<div class="d-none" name ="CartId">@Model.CartId</div>*@
                @*<div class="mt-3">Size: 6</div>
                    <div class="mt-2">
                        <button type="button" class="btn btn-outline-dark rounded-0 btn-size mr-2">6</button>
                        <button type="button" class="btn btn-outline-dark rounded-0 btn-size mr-2">7</button>
                        <button type="button" class="btn btn-outline-dark rounded-0 btn-size">8</button>
                    </div>*@
            </div>
        </div>
    </div>
    @* 價格 *@
    <div class="col-2 text-center mt-3"> $@Model.ProductPrice </div>
    @* 數量 *@
    <div class="col-3 text-center">
        @* 增加 *@
        <button id=@quantityAdd type="button" class="btn btn-outline-dark rounded-0 btn-size" onclick="AddOrReduce(this)"><i class="fas fa-chevron-up"></i></button>
        @* 顯示數量 *@
        <input id=@quantity value="@Model.Quantity" class="text-center w-25" />
        @* 減少 *@
        <button id=@quantityReduce type="button" class="btn btn-outline-dark rounded-0 btn-size mr-2" onclick="AddOrReduce(this)"><i class="fas fa-chevron-down"></i></button>
    </div>
    <div class="col-2 text-right mt-3">
        <div class="row p-0">
            @*數量 * 價格*@
            <div class="unitTotal ml-auto">$@total</div>
            @*刪除*@
            <button id="@Model.OrderDetailsID"  class=" btn btn-red ml-2 deleteCart"><i class="fas fa-times text-center rounded-0"></i></button>
        </div>
    </div>
</div>
<div class="row">
    <hr class="col-12" />
</div>
