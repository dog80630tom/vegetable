@model  vegetable.Models.ViewModels.OrderDetailViewModel
@{
    var urls = Json.Decode(Model.PicUrl);
}
@*結帳頁顯示商品用*@
<div class="row mt-3">
    @* 圖片 *@
    <div class="col-3">
        <img class="min-cart-card" src="@urls.Url1" alt="@Model.ProductName" />
    </div>
    @* 數量 名稱 *@
    <div class="col-7">
        <span class="quantity">@Model.Quantity</span>
        <span>x</span>
        <span>@Model.ProductName</span>
    </div>
    @* 價格 *@
    <div class="col-2">
        <span class="unitTotal">$@Model.ProductPrice</span>
    </div>
</div>
