        }

        .dot:hover {
            border-bottom: 1px dotted;
        }

        .icon:hover {
            color: black;
            transition: .2s;
        }

         .main-nav .nav-item .nav-link .line {
            border-bottom: 2px solid white;
            display: block;
            transition: 0.5s;
        }
         .main-nav .nav-item:hover .nav-link .line {
            transition: 0.5s;
            border-bottom: 2px solid black;
         }
        .menu-block {
            background-color: rgba(250,250,250,.95);
            width: 100%;
            position: absolute;
            left: 0;
            margin-top: 10px;
            box-shadow: 1px 1px 10px #ddd;
            padding: 40px;
            z-index: 99;
            display: none;
            opacity: 0;
        }

        .menu-list li {
            display: inline-block;
            margin-right: 12px;
        }

        .main-nav .nav-item:hover .menu-block {
            display: block;
            transition: .2s;
            opacity: 1;
        }
/*Login modal*/
        input {
