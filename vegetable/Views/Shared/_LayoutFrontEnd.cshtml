        function unlock() {
            $( 'body' ).css( 'overflow', 'auto' );
            $( '.lock-background' ).css( 'display', 'none' );
            closeNav( btn );
        }
        function Binding() {
            var vm = new Vue( {
                el: '#main',
                data: {
                    categories: []
                },
                mounted: function () {
                    var settings = {
                        "async": true,
                        "crossDomain": true,
                        "url": "/api/CategoriesApi",
                        "method": "GET",
                    }
                    $.ajax( settings ).done( function ( response ) {
                        console.log( response );
                        vm.categories = response;
                    } );
                }
            } );
        }

        //顯示現在購物車內有幾項商品
        function GetCartAmount() {
            $.ajax( {
                type: "GET",
                url: "/Frontend/GetCartAmount",
                dataType: "text",
                success: function ( response ) {
                    $( '#CartAmount' ).text( `${response}` );
                }
            } );
        }

        //顯示浮動購物車視窗
        function FloatCart() {
            $( '#cartFloat' ).show();
            AjaxCart();
        }

        //關閉浮動購物車視窗
        function CloseFloatCart() {
            $( '#cartFloat' ).hide();
        }

        function AjaxCart() {
            $.ajax( {
                type: "GET",
                url: "/frontend/FloatCart",
                async: false,
                success: function ( response ) {
                    let arr = JSON.parse( response )
                    let sum = 0
                    arr.forEach( element => Template( element ) )
                    arr.forEach( element => sum += CaculateSum( element ) )
                     $( '.price' ).each( function ( index, element ) {
                $( element ).text( '$' + sum.toString() );
            } );
                }
            } );
        }

        function CaculateSum( element ) {
            return element.ProductPrice * element.Quantity
        }

        function Template( element ) {
            let url = JSON.parse(element.PicUrl)
            let template = `
                    <div class="row mt-2">
                        @*pic*@
                        <div class="col-5">
                            <div class="row">
                                <div class="col-3">
                                    <img src="${url.Url1}" />
                                </div>
                                @* product name *@
                                <div class="col-9 pr-0">
                                    <div class="ml-5">
                                        ${element.ProductName}
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*price*@
                        <div class="col-2">
                            <span class="unitTotal">$${element.ProductPrice}</span>
                        </div>
                        @*quantity*@
                        <div class="col-3 text-center">
                            <span class="quantity">${element.Quantity}</span>
                        </div>
                        @*total*@
                        <div class="col-2">
                            $${element.ProductPrice * element.Quantity}
                        </div>
                    </div><br/>`
            $( '#minCartCard' ).append( template );
        }

        GetCartAmount();
        Binding();
    </script>

