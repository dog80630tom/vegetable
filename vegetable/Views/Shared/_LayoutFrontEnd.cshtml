            <a href="#" id="Close-LoginSideNav" class="closebtn">&times</i></a>
            <ul class="p-0">
                <li class="d-block">
                    <div class="menu-item">
                        <a href="@Url.Action("loginpage", "FrontEnd")">LOGIN</a>
                    </div>
                </li>
                <li class="d-block">
                    <div class="menu-item">
                        <a href="@Url.Action("MemberRegist","FrontEnd")">REGISTER</a>
