                        <li class="nav-item">
                            <a class="nav-link text-dark  mx-3 navTop" href="@Url.Action("MemberRegist","FrontEnd")"><span class="dot">REGISTER</span></a>
                        </li>
                    }

                </ul>
                <ul class="navbar-nav p-0 text-center">

                    <li class="nav-item active border-right border-left  p-0  quick-search">
                        <input type="checkbox" />
                        <a class="nav-link text-dark  mx-3 navTop" href="#">
                            <i class="fas fa-search icon"></i>
                        </a>

                        @*-----------------quick-search Search-bar-md----------------------------------*@
