<!DOCTYPE html>
<html lang="en">
<head>
    @*<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOBEDA</title>
    @Styles.Render("~/Content/vegetable")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Merriweather&display=swap" rel="stylesheet">
    <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>-->
    <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.6.10/vue.js"></script>-->
    <script src="~/Scripts/vue.js"></script>
    @*icon*@
    <link rel="Shortcut Icon" type="image/x-icon" href="~/Assets/ruby.ico" />
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            font-size: 13px;
            font-weight: 600;
            letter-spacing: 1.1px;
        }

        .container {
            max-width: 1200px;
        }

        .icon {
            font-size: 18px;
        }

        .band {
            color: black;
        }

            .band:hover {
                text-decoration: none;
                color: black;
            }

        .navTop {
            line-height: 40px;
        }

        .title {
            font-family: 'Merriweather', serif;
            font-size: 55pt;
            font-weight: 400;
        }

        .btn-outline-dark {
            color: #000;
            border-color: #000;
            border: 3px solid;
            background: white;
        }

            .btn-outline-dark:hover {
                color: white !important;
                background: #000 !important;
                border-color: #000;
            }

            .btn-outline-dark:active, .btn-outline-dark:focus {
                box-shadow: none !important;
                outline: none !important;
                border-color: #000;
            }

        .dot:hover {
            border-bottom: 1px dotted;
        }

        .icon:hover {
            color: black;
            transition: .2s;
        }
        /*頁面商品分類選單*/
        .main-nav {
            display: none;
        }

            .main-nav .nav-item .nav-link .line {
                border-bottom: 2px solid white;
                display: block;
                transition: 0.5s;
            }

            .main-nav .nav-item:hover .nav-link .line {
                transition: 0.5s;
                border-bottom: 2px solid black;
            }

        .menu-block {
            background-color: rgba(250,250,250,.95);
            width: 100%;
            position: absolute;
            left: 0;
            margin-top: 10px;
            box-shadow: 1px 1px 10px #ddd;
            padding: 40px;
            z-index: 99;
            display: none;
            opacity: 0;
            font-size: 11px;
        }

        .bg-menu {
            background-color: rgba(250,250,250,.95);
            letter-spacing: 0.5px;
            font-weight: 100;
        }

        .menu-list {
            padding: 0;
        }

            .menu-list li {
                padding: .3rem 0;
                list-style: none;
                color: black
            }

                .menu-list li a,
                .menu-list li a:hover {
                    text-decoration: none;
                    color: black;
                }

                .menu-list li:not(:first-child) {
                    font-weight: 100;
                }

        .main-nav .nav-item:hover .menu-block {
            display: block;
            transition: .2s;
            opacity: 1;
        }

        .lock-background {
            background: rgba(255,255,255,.8);
            bottom: 0;
            display: none;
            position: fixed;
            right: 0;
            top: 0;
            z-index: 1000;
            left: 0;
            pointer-events: auto;
        }
        /*silde bar*/
        #ProductSidenav {
            width: 280px;
            margin-left: -280px;
            padding-top: 35px;
        }

        #LoginSidenav {
            width: 280px;
            margin-left: -280px;
            padding-top: 35px;
        }

        .navbar-toggler .fas,
        .navbar-toggler .far {
            font-size: 26px;
            color: black;
            text-align: center;
            padding-top: .5rem;
            padding-bottom: .5rem;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 9999;
            top: 0;
            left: 0;
            background-color: rgb(255, 255, 255);
            overflow-x: hidden;
            transition: 0.5s;
            box-shadow: 1px 1px 10px #ddd;
            padding-top: 60px;
        }

            .sidenav .menu-item {
                cursor: pointer;
                list-style: none;
                display: flex;
                /* line-height:2.5rem; */
                border-top: 1px solid rgb(190, 190, 190);
                display: flex;
                justify-content: space-between;
                padding: 10px 12px;
                /*padding:6px 10px;*/
            }

                .sidenav .menu-item:hover {
                    color: rgb(255, 255, 255);
                    background: black;
                    transition: .5s linear;
                }

                    .sidenav .menu-item:hover a {
                        color: rgb(255, 255, 255);
                    }

                .sidenav .menu-item a {
                    text-decoration: none;
                    font-size: 12px;
                    font-weight: 400;
                    color: #000000;
                    display: block;
                    transition: 0.3s;
                    /*padding:.5rem 0 .5rem .8rem;*/
                }

                .sidenav .menu-item .fas {
                    transition: transform .3s ease-in-out;
                }

                .sidenav .menu-item[aria-expanded="flase"] .fas,
                .sidenav .menu-item[aria-expanded="true"] .fas {
                    transform: rotateX(180deg);
                }

            .sidenav .menu-child {
                list-style: none;
                padding: 0;
                font-weight: 400;
            }

                .sidenav .menu-child li {
                    padding: 10px 12px;
                    opacity: 0.75;
                }

                    .sidenav .menu-child li:hover {
                        opacity: 1;
                    }


                .sidenav .menu-child a,
                .sidenav .menu-child i {
                    /*padding:.5rem 0 .5rem .8rem;*/
                    cursor: pointer;
                    color: black;
                    text-decoration: none;
                }

                    .sidenav .menu-child i:hover {
                        cursor: pointer;
                        color: black;
                    }

                .sidenav .menu-child .fas {
                    transition: transform .4s ease-in-out;
                }

                    .sidenav .menu-child .fas[aria-expanded="true"], .sidenav .menu-child .fas[aria-expanded="flase"] {
                        transform: rotate(180deg);
                    }

            .sidenav .closebtn {
                position: absolute;
                top: .2rem;
                right: .5rem;
                font-size: 24px;
                color: black;
                text-decoration: none;
            }
        /*search-bar-sm相關 mobile*/
        .search-bar-icon:hover {
            text-decoration: none;
        }

        .search-bar-sm {
            width: 90%;
            margin: 1rem auto;
            border-bottom: 2px solid black;
            color: black;
        }

            .search-bar-sm input {
                margin-top: 0;
                border: none;
                font-size: 12px;
            }

                .search-bar-sm input::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
                    color: black;
                    opacity: 1; /* Firefox */
                    transition: .2s linear;
                }

                .search-bar-sm input:-ms-input-placeholder { /* Internet Explorer 10-11 */
                    color: black;
                }

                .search-bar-sm input::-ms-input-placeholder { /* Microsoft Edge */
                    color: black;
                }

                .search-bar-sm input:focus {
                    /*outline:none;
                     border:none;*/
                    background: none;
                }

                    .search-bar-sm input:focus::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
                        padding-left: 20px;
                        opacity: 0; /* Firefox */
                        transition: .2s linear;
                    }

                    .search-bar-sm input:focus:-ms-input-placeholder { /* Internet Explorer 10-11 */
                        padding-left: 20px;
                        opacity: 0; /* Firefox */
                        transition: .2s linear;
                    }

                    .search-bar-sm input:focus::-ms-input-placeholder { /* Microsoft Edge */
                        padding-left: 20px;
                        opacity: 0; /* Firefox */
                        transition: .2s linear;
                    }

            .search-bar-sm .input-group-text {
                background: none;
                border: none;
            }

            .search-bar-sm input:focus {
                box-shadow: none;
            }

        @@media screen and (min-width:992px) {
            .search-bar-sm {
                display: none;
            }

            .main-nav {
                display: flex;
            }
        }
        /* quick-search Search-bar-md*/
        .quick-search {
            color: red;
        }

        .quick-search {
            position: relative;
        }

            .quick-search [type="checkbox"] {
                height: 100%;
                width: 100%;
                margin: 0;
                padding: 0;
                position: absolute;
                opacity: 0;
                z-index: 999;
                right: 0;
                top: 0;
            }

                .quick-search [type="checkbox"]:checked {
                    position: fixed;
                    right: 10px;
                    top: 30px;
                    opacity: 1;
                    height: 30px;
                    width: 30px;
                }

                    .quick-search [type="checkbox"]:checked::after {
                        width: 30px;
                        height: 30px;
                        position: fixed;
                        content: '';
                        background: #fff8dc no-repeat;
                        background-position: center;
                        background-image: url(/Content/images/close-button.png);
                        line-height: 30px;
                        font-size: 30px;
                        border: 1px solid grey;
                        text-align: center;
                    }

                    .quick-search [type="checkbox"]:checked ~ .search-bar-md-warp {
                        z-index: 99;
                        transition: .2s linear;
                        opacity: 1;
                        visibility: visible;
                    }

        .search-bar-md-warp {
            background: #fff8dc;
            padding: 1.3rem 0;
            opacity: 0;
            position: fixed;
            left: 0;
            top: 0;
            transition: .2s linear;
            visibility: hidden;
        }

        .search-bar-md {
            width: 35%;
            margin: 0 auto;
            border-bottom: 1px solid black;
            color: black;
        }

            .search-bar-md input {
                border: none;
                font-size: 16px;
                background: #fff8dc;
            }

                .search-bar-md input::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
                    color: black;
                    opacity: 1; /* Firefox */
                    transition: .2s linear;
                }

                .search-bar-md input:-ms-input-placeholder { /* Internet Explorer 10-11 */
                    color: black;
                }

                .search-bar-md input::-ms-input-placeholder { /* Microsoft Edge */
                    color: black;
                }

                .search-bar-md input:focus {
                    background: none;
                }

                    .search-bar-md input:focus::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
                        padding-left: 35px;
                        opacity: 0;
                        transition: .2s linear;
                    }

                    .search-bar-md input:focus:-ms-input-placeholder { /* Internet Explorer 10-11 */
                        padding-left: 20px;
                        opacity: 0; /* Firefox */
                        transition: .2s linear;
                    }

                    .search-bar-md input:focus::-ms-input-placeholder { /* Microsoft Edge */
                        padding-left: 20px;
                        opacity: 0; /* Firefox */
                        transition: .2s linear;
                    }

            .search-bar-md .input-group-text {
                background: none;
                border: none;
            }

            .search-bar-md input:focus {
                box-shadow: none;
            }

        @@media screen and (max-width:992px) {
            .search-bar-md-warp {
                display: none;
            }
        }
        /*footer相關*/
        .bg-footer {
            background: #d4a299;
        }

        .footericon {
            font-size: 26px;
        }

        .footertext {
            font-weight: 400;
        }

        .footer-list {
            padding: 0;
            margin-top: 3rem;
        }

            .footer-list li {
                padding: .5rem .10rem;
                list-style: none;
                margin-right: 12px;
                letter-spacing: 1px;
                color: white;
            }

                .footer-list li a,
                .footer-list li a:hover {
                    color: white;
                    text-decoration: none;
                }

                .footer-list li:not(:first-child) {
                    font-weight: 100;
                }
        /*Login modal*/
        input {
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button {
            padding: 14px 20px;
            cursor: pointer;
            font-size: 12px;
            font-weight: 900;
            letter-spacing: 2px;
        }

            button:hover {
                opacity: 0.8;
            }

        .closecontainer {
            text-align: center;
            margin: 24px 0;
            position: relative;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, 0.4);
            padding-top: 60px;
            padding-right: 0 !important;
        }

            .modal label {
                padding: 10px 0;
                margin-top: 5px;
                margin-bottom: 0;
            }

            .modal input {
                padding: 10px 0;
                margin-top: 5px;
                margin-bottom: 0;
            }

            .modal button {
                padding: 10px 0;
                margin: 20px 0;
            }

        .modal-content {
            background-color: #fefefe;
            margin: 0% auto 10% auto;
            border: 1px solid #888;
            width: 550px;
            height: 580px;
            overflow: auto;
        }

        .close {
            position: absolute;
            right: 25px;
            top: 0;
            color: #e82b1a;
            font-size: 25px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: #e82b1a;
                cursor: pointer;
            }

        .animate {
            -webkit-animation: animatezoom 0.6s;
            animation: animatezoom 0.6s
        }

        /*購物車顯示數量*/
        .cart-relative {
            position: relative;
        }

        .cart-absolute {
            font-size: 14px;
            position: absolute;
            top: 5px;
            right: 12px;
            background-color: #d4a299;
            color: #fff;
        }

        .cart-i-con {
            font-size: 24px;
        }

        /*購物車浮動視窗*/
        #cartFloat {
            display: none;
            left: 0%;
            margin-left: 58.4%;
            position: fixed;
            top: 56px;
            z-index: 999;
            background-color: white;
            padding: 0px;
        }

            #cartFloat img {
                height: 100px;
            }

        .cart-title {
            background-color: #d9d9d9;
        }

        #cartTag {
            cursor: pointer;
        }

        #minCartCard {
            height: 250px;
            overflow: auto;
        }
    </style>
    @RenderSection("styles", required: false)
</head>
<body class="pb-0">
    <div id="main">
        @*購物車浮動視窗*@
        <div id="cartFloat" class="col-12">
            <div class="col-5 border p-0">
                <div class="col-12 cart-title">
                    <div class="row py-2">
                        <div class="col-5">
                            ITEMS
                        </div>
                        <div class="col-2">
                            PRICE
                        </div>
                        <div class="col-3 text-center">
                            QUANTITY
                        </div>
                        <div class="col-2">
                            TOTAL
                        </div>
                    </div>
                </div>
                @* min cart card *@
                <div id="minCartCard" class="col-12 mt-3"></div>

                @* 運費 稅金 *@
                <div class="col-12">
                    <div class="row">
                        @* 小計 *@
                        <div class="col-6 text-grey my-2">Subtotal</div>
                        <div class="col-6 text-right my-2 price" id="SubtotalFloat"></div>
                    </div>
                </div>
                @* Total金額 *@
                <div class="col-12 border-top">
                    <div class="row text-total  my-3">
                        <div class="col-6">Total(USD)</div>
                        <div class="col-6 text-right price" id="GrandTotalFloat"></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <a href="/Cart" class="btn btn-outline-dark rounded-0 col-12">VIEW CART</a>
                        </div>
                        <div class="col-6">
                            <a href="/Checkout" class="btn btn-outline-dark rounded-0 col-12">CHECK OUT</a>
                        </div>
                        <div class="col-12 mt-2">
                            <button class="btn btn-outline-dark rounded-0 col-12" onclick="CloseFloatCart()">CLOSE</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*------------------------------首頁Navbar--------------------------------------------------------------------*@
        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-white border-bottom p-0 justify-content-between" @*onclick="openNav()"*@>
            <button class="navbar-toggler border-0" id="btn-slide" type="button" data-toggle="collapse" @*data-target="#navbarNavDropdown"*@ aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <button class="navbar-toggler border-0" id="btn-slide-login" type="button" data-toggle="collapse" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <i class="far fa-user"></i>
            </button>
            <button class="navbar-toggler border-0" type="button" data-toggle="collapse" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <i class="far fa-clipboard icon ml-3"></i>
            </button>

            <div class="collapse navbar-collapse p-0 justify-content-between" id="navbarNavDropdown">
                <ul class="navbar-nav p-0">
                    @if (Request.Cookies["myaccount"] != null)
                    {
                        <li class="nav-item active border-right  p-0">
                            <a class="nav-link text-dark mx-3 navTop" href="@Url.Action("MemberPageOrder", "FrontEnd")"><span class="dot">ACCOUNT</span></a>
                        </li>

                        if ((string)TempData["roles"] == "Client")
                        {
                            <li class="nav-item active">
                                <a class="nav-link text-dark mx-3 navTop">@TempData["username"].ToString()</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Logout", "FrontEnd")" class="nav-link text-dark mx-3 navTop">登出</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item active">
                                <a href="@Url.Action("Index", "Home")" class="nav-link text-dark mx-3 navTop">前往後台</a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Logout", "FrontEnd")" class="nav-link text-dark mx-3 navTop">登出</a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item active border-right  p-0">
                            <a class="nav-link text-dark mx-3 navTop" href="@Url.Action("loginpage", "FrontEnd")"><span class="dot">ACCOUNT</span></a>
                        </li>
                        <li class="nav-item active">
                            @*<a href="@Url.Action("Login", "FrontEnd")" class="nav-link text-dark mx-3 navTop"><span class="dot">LOGIN</span></a>*@
                            <a id="btn_login" class="nav-link text-dark mx-3 navTop"><span class="dot">LOGIN</span></a>
