                            <span class="dot">CART</span>
                            @*購物車i con 和顯示數目的badge*@
                            <i class="far fa-clipboard icon ml-3 cart-relative cart-i-con"></i>
                            <p id="CartAmount" href="#" class="badge badge-primary rounded-circle cart-absolute">0</p>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="ProductSidenav" class="sidenav">
            <a href="#" id="Close-ProductSideNav" class="closebtn">&times</a>
            <ul class="p-0">
                <li v-for="c1 in categories" class="d-block">
                    <div class="menu-item" data-toggle="collapse" :data-target="'#'+c1.listname" aria-expanded="false" :aria-controls="c1.listname">
                        <a :href=`/Products/${c1.label}`>{{c1.label.toUpperCase()}}</a>
