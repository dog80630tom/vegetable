                </li>
                <li class="d-block">
                    <div class="menu-item">
                        <a href="@Url.Action("loginpage", "FrontEnd")">ACCOUNT</a>
                    </div>
                </li>
            </ul>
        </div>
        @*-----------------------------content Category Bar-----------------------------------------------------------------------------*@
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center title my-4"><a href="@Url.Action("index", "FrontEnd")" class="band">LOBEDA</a></div>
            </div>
            <ul class="main-nav nav justify-content-center mb-4 align-items-center">
