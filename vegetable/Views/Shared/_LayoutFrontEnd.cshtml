                            <div class="input-group search-bar-md">
                                <input id="search" type="text" class="form-control rounded-0" placeholder="Search">
                                <div class="input-group-append">
                                    <a href="#" id="searchBTN" class="input-group-text rounded-0 search-bar-icon">
                                        <i class="fas fa-search"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark mx-3 navTop" href="/WishList"><span class="dot">WISH LISTS</span></a>
