        /* quick-search Search-bar-md*/
        .quick-search {
            color: red;
        }

        .quick-search {
            position: relative;
        }

            .quick-search [type="checkbox"] {
                height: 100%;
                width: 100%;
                margin: 0;
                padding: 0;
                position: absolute;
                opacity: 0;
                z-index: 999;
                right: 0;
                top: 0;
            }

                .quick-search [type="checkbox"]:checked {
                    position: fixed;
                    right: 10px;
                    top: 30px;
                    opacity: 1;
                    height: 30px;
                    width: 30px;
                }

                    .quick-search [type="checkbox"]:checked::after {
                        width: 30px;
                        height: 30px;
                        position: fixed;
                        content: '';
                        background: #fff8dc no-repeat;
                        background-position: center;
                        background-image: url(/Content/images/close-button.png);
                        line-height: 30px;
                        font-size: 30px;
                        border: 1px solid grey;
                        text-align: center;
                    }

                    .quick-search [type="checkbox"]:checked ~ .search-bar-md-warp {
                        z-index: 99;
                        transition: .2s linear;
                        opacity: 1;
                        visibility: visible;
                    }

        .search-bar-md-warp {
